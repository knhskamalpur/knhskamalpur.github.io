---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import '../styles/styles.scss'
const { title = '' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#012f63">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="KNHS">
    <meta name="description" content="Official website for Kamalpur Netaji High School (H.S.)">
    <meta name="color-schema" content="light dark">
    <meta property="og:title" content={title ? `${title} - Kamalpur Netaji High School` : 'Kamalpur Netaji High School'}>
    <meta property="og:description" content="Official website for Kamalpur Netaji High School (H.S.)">
    <meta property="og:image" content="https://knhs.in/assets/images/knhs.webp">
    <meta property="og:url" content="https://knhs.in">
    <meta property="og:type" content="website">
    <title>{title ? `${title} - Kamalpur Netaji High School` : 'Kamalpur Netaji High School'}</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon-16x16.png">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="manifest" href="/manifest.json">
    <link rel="canonical" href="https://knhs.in" />
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-5842RLGX');</script>
    <!-- End Google Tag Manager -->
    <meta name="google-site-verification" content="k-04ScWMTEWq5pXVbfYlAPHdRNJn_AY7Ttwq9ve7aTI" />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-N4492M24C7"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-N4492M24C7');
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wdth,wght@0,62.5..100,100..900;1,62.5..100,100..900&display=swap" rel="stylesheet">
    <slot name="head" />
    <slot name="before-styles" />
    <slot name="after-styles" />
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5842RLGX"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <Header />
    <main>
      <slot />
    </main>
    <Footer />

    <script is:inline type="text/javascript" src="/assets/js/typer.js"></script>
    <script is:inline>
        console.log(
            String.raw`%cCopyright belongs to Kamalpur Netaji High School (H.S.) Estd 1956`,
            "color: #ffd700; background: #012f63; font-family: 'Courier New', monospace; font-size: 14px; font-weight: bold; padding: 15px; border-radius: 8px; line-height: 1.5;"
        );
        document.getElementById('year').textContent = new Date().getFullYear();
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/sw.js')
                .then(registration => console.log('SW registered'))
                .catch(error => console.log('SW registration failed'));
        }
    </script>
    <slot name="scripts" />
  </body>
</html>
