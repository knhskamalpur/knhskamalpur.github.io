---
import BaseLayout from '../layouts/BaseLayout.astro'

const description = "Get in touch with Kamalpur Netaji High School (H.S.). Find our contact address in Chhatna, Bankura, phone numbers, and official communication details.";
const keywords = "Contact KNHS, School Address, Bankura School Contact, Chhatna High School Phone, Kamalpur Netaji High School Location";
---

<BaseLayout title="Contact Us" description={description} keywords={keywords}>
  <span slot="head">
    <style>
      /* Use the shared .card styles from the main stylesheet by adding the class on the element.
         Keep only contact-specific rules here. */
      .contact-info {
        text-align: left;
      }
      .contact-info i {
        width: 30px;
        color: #fec90d;
        text-align: center;
      }
      .contact-info ul {
        list-style: none;
        padding: 0;
      }
      .contact-info li {
        margin-bottom: 20px;
        display: flex;
        align-items: flex-start;
      }
      .contact-info li div {
        margin-left: 10px;
      }
      .contact-info a {
        color: white;
        text-decoration: none;
        -webkit-transition: color 0.3s ease;
        -moz-transition: color 0.3s ease;
        -ms-transition: color 0.3s ease;
        -o-transition: color 0.3s ease;
        transition: color 0.3s ease;
      }
      .contact-info a:hover {
        color: #fec90d;
      }
      .map-box {
        margin: 30px auto 0;
        position: relative;
        padding: 12px;
        max-width: 100%;
        border-radius: var(--radius);
        border: 1px solid rgba(255, 255, 255, 0.06);
        background: linear-gradient(135deg, rgba(18,24,38,0.6), rgba(10,14,22,0.45));
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.6), inset 0 1px 0 rgba(255,255,255,0.02);
        backdrop-filter: blur(6px);
        -webkit-backdrop-filter: blur(6px);
        overflow: hidden;
        transition: transform 0.25s ease, box-shadow 0.25s ease;
      }
      .map-box:hover {
        transform: translateY(-4px);
        box-shadow: 0 18px 50px rgba(0,0,0,0.75);
      }
      .map-box::after {
        content: '';
        position: absolute;
        inset: 0;
        pointer-events: none;
        background: linear-gradient(180deg, rgba(0,0,0,0.06), transparent 40%);
        mix-blend-mode: overlay;
      }
      .map-box iframe {
        width: 100%;
        --map-height: clamp(300px, 60vh, 700px);
        height: var(--map-height) !important;
        display: block;
        border: 0;
        border-radius: calc(var(--radius) - 6px);
        box-shadow: 0 6px 30px rgba(0,0,0,0.5);
        filter: saturate(0.98) contrast(0.96) brightness(0.98);
        transition: filter 0.25s ease, height 0.28s ease;
      }
      .map-box:hover iframe {
        --map-height: clamp(360px, 66vh, 780px) !important;
        filter: saturate(1.02) contrast(1) brightness(1);
      }

      @media (max-width: 720px) {
        .map-box {
          padding: 8px;
        }
        .map-box iframe {
          --map-height: clamp(220px, 44vh, 520px);
          height: var(--map-height) !important;
        }
        .map-box:hover iframe {
          --map-height: clamp(260px, 50vh, 580px) !important;
        }
      }
    </style>
  </span>

  <section>
    <h2>Contact Us</h2>
    <p>We'd love to hear from you. Reach out to us using the details below.</p>
    <div class="contact-info card">
      <ul>
        <li>
          <i class="fa fa-university" aria-hidden="true"></i>
          <div><strong>School Name:</strong><br />Kamalpur Netaji High School (H.S.)</div>
        </li>
        <li>
          <i class="fa fa-map-marker" aria-hidden="true"></i>
          <div><strong>Address:</strong><br />Vill+P.O. - Kamalpur, P.S. - Chhatna,<br />Dist - Bankura, PIN - 722137,<br />West Bengal</div>
        </li>
        <li>
          <i class="fa fa-mobile" aria-hidden="true"></i>
          <div><strong>Phone:</strong><br /><a href="tel:9434393164">9434393164</a></div>
        </li>
        <li>
          <i class="fa fa-envelope-o" aria-hidden="true"></i>
          <div><strong>Email:</strong><br /><a href="mailto:knhskamalpur@gmail.com">knhskamalpur@gmail.com</a></div>
        </li>
      </ul>
    </div>
    <div class="map-box">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3664.4161162409273!2d86.84419097532219!3d23.30065647897977!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39f6544c82bf163f%3A0x548626cd6e7c166d!2sKamalpur%20Netaji%20High%20School!5e0!3m2!1sen!2sin!4v1769774306759!5m2!1sen!2sin"
        width="100%"
        height="700px"
        style="border: 0; max-width: 100%; -webkit-border-radius: var(--radius); -moz-border-radius: var(--radius); border-radius: var(--radius)"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </section>
</BaseLayout>

