---
import BaseLayout from '../layouts/BaseLayout.astro'

const description = "Get in touch with Kamalpur Netaji High School (H.S.). Find our contact address in Chhatna, Bankura, phone numbers, and official communication details.";
const keywords = "Contact KNHS, School Address, Bankura School Contact, Chhatna High School Phone, Kamalpur Netaji High School Location";
---

<BaseLayout title="Contact Us" description={description} keywords={keywords}>
  <span slot="head">
    <style>
      .contact-info {
        background: #ffffff00;
        backdrop-filter: blur(3px);
        -webkit-backdrop-filter: blur(3px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 2rem;
        -webkit-border-radius: var(--radius);
        -moz-border-radius: var(--radius);
        border-radius: var(--radius);
        max-width: 900px;
        width: 100%;
        text-align: left;
        color: white;
        -webkit-box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5);
        -moz-box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5);
        position: relative;
        overflow: hidden;
      }
      .contact-info::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.05), transparent);
        -webkit-transition: 0.5s;
        -moz-transition: 0.5s;
        transition: 0.5s;
      }
      .contact-info:hover::before {
        left: 100%;
        -webkit-transition: 0.8s;
        -moz-transition: 0.8s;
        transition: 0.8s;
      }
      .contact-info i {
        width: 30px;
        color: #fec90d;
        text-align: center;
      }
      .contact-info ul {
        list-style: none;
        padding: 0;
      }
      .contact-info li {
        margin-bottom: 20px;
        display: flex;
        align-items: flex-start;
      }
      .contact-info li div {
        margin-left: 10px;
      }
      .contact-info a {
        color: white;
        text-decoration: none;
        -webkit-transition: color 0.3s ease;
        -moz-transition: color 0.3s ease;
        -ms-transition: color 0.3s ease;
        -o-transition: color 0.3s ease;
        transition: color 0.3s ease;
      }
      .contact-info a:hover {
        color: #fec90d;
      }
      .map-box {
        max-width: 600px;
        margin: 30px auto 0;
        background-color: rgba(255, 255, 255, 0.05);
        padding: 20px;
        -webkit-border-radius: var(--radius);
        -moz-border-radius: var(--radius);
        border-radius: var(--radius);
      }
    </style>
  </span>

  <section>
    <h2>Contact Us</h2>
    <p>We'd love to hear from you. Reach out to us using the details below.</p>
    <div class="contact-info">
      <ul>
        <li>
          <i class="fa fa-university" aria-hidden="true"></i>
          <div><strong>School Name:</strong><br />Kamalpur Netaji High School (H.S.)</div>
        </li>
        <li>
          <i class="fa fa-map-marker" aria-hidden="true"></i>
          <div><strong>Address:</strong><br />Vill+P.O. - Kamalpur, P.S. - Chhatna,<br />Dist - Bankura, PIN - 722137,<br />West Bengal</div>
        </li>
        <li>
          <i class="fa fa-mobile" aria-hidden="true"></i>
          <div><strong>Phone:</strong><br /><a href="tel:9434393164">9434393164</a></div>
        </li>
        <li>
          <i class="fa fa-envelope-o" aria-hidden="true"></i>
          <div><strong>Email:</strong><br /><a href="mailto:knhskamalpur@gmail.com">knhskamalpur@gmail.com</a></div>
        </li>
      </ul>
    </div>
    <div class="map-box">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3664.4161162409273!2d86.84419097532219!3d23.30065647897977!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39f6544c82bf163f%3A0x548626cd6e7c166d!2sKamalpur%20Netaji%20High%20School!5e0!3m2!1sen!2sin!4v1769774306759!5m2!1sen!2sin"
        width="600"
        height="450"
        style="border: 0; max-width: 100%; -webkit-border-radius: var(--radius); -moz-border-radius: var(--radius); border-radius: var(--radius)"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </section>
</BaseLayout>

