---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout title="Contact Us">
  <span slot="head">
    <style>
      nav a[href="/contact"] {
        background-color: #fec90d;
        color: #012f63;
      }
      .contact-info {
        background: #ffffff00;
        backdrop-filter: blur(3px);
        -webkit-backdrop-filter: blur(3px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        max-width: 900px;
        width: 100%;
        text-align: left;
        color: white;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5);
      }
      .contact-info i {
        width: 30px;
        color: #fec90d;
        text-align: center;
      }
      .contact-info ul {
        list-style: none;
        padding: 0;
      }
      .contact-info li {
        margin-bottom: 20px;
        display: flex;
        align-items: flex-start;
      }
      .contact-info li div {
        margin-left: 10px;
      }
      .contact-info a {
        color: white;
        text-decoration: none;
        transition: color 0.3s ease;
      }
      .contact-info a:hover {
        color: #fec90d;
      }
      .map-box {
        max-width: 600px;
        margin: 30px auto 0;
        background-color: rgba(255, 255, 255, 0.05);
        padding: 20px;
        border-radius: 8px;
      }
    </style>
  </span>

  <section class="fade-in">
    <h2>Contact Us</h2>
    <p>We'd love to hear from you. Reach out to us using the details below.</p>
    <div class="contact-info">
      <ul>
        <li>
          <i class="fa fa-university" aria-hidden="true"></i>
          <div><strong>School Name:</strong><br />Kamalpur Netaji High School (H.S.)</div>
        </li>
        <li>
          <i class="fa fa-map-marker" aria-hidden="true"></i>
          <div><strong>Address:</strong><br />Vill+P.O. - Kamalpur, P.S. - Chhatna,<br />Dist - Bankura, PIN - 722137,<br />West Bengal</div>
        </li>
        <li>
          <i class="fa fa-mobile" aria-hidden="true"></i>
          <div><strong>Phone:</strong><br /><a href="tel:9434393164">9434393164</a></div>
        </li>
        <li>
          <i class="fa fa-envelope-o" aria-hidden="true"></i>
          <div><strong>Email:</strong><br /><a href="mailto:knhskamalpur@gmail.com">knhskamalpur@gmail.com</a></div>
        </li>
      </ul>
    </div>
    <div class="map-box">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3664.4161162409273!2d86.84419097532219!3d23.30065647897977!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39f6544c82bf163f%3A0x548626cd6e7c166d!2sKamalpur%20Netaji%20High%20School!5e0!3m2!1sen!2sin!4v1769774306759!5m2!1sen!2sin"
        width="600"
        height="450"
        style="border: 0; max-width: 100%; border-radius: 8px"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </section>
</BaseLayout>

