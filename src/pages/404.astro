---
import '../styles/styles.scss';
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#012f63">
    <title>Page Not Found - Kamalpur Netaji High School</title>
    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon-16x16.png">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    
    <!-- CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <style>
        .error-content {
            text-align: center;
            padding: 60px 20px;
            min-height: 40vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .error-code {
            font-size: 8rem;
            color: #fec90d;
            margin: 0;
            line-height: 1;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        .error-title {
            font-size: 2rem;
            margin: 10px 0 20px;
        }
        .error-desc {
            font-size: 1.1rem;
            max-width: 600px;
            margin-bottom: 30px;
            line-height: 1.6;
        }
        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            background: linear-gradient(135deg, var(--accent, #fec90d), #e6b60c);
            color: #00234a;
            padding: 14px 36px;
            text-decoration: none;
            border-radius: calc(var(--radius) * 1.5);
            font-weight: 700;
            font-size: 1.1rem;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 0 8px 20px rgba(254, 201, 13, 0.2);
            position: relative;
            overflow: hidden;
            border: none;
        }
        .back-btn i {
            font-size: 1.2rem;
            transition: transform 0.3s ease;
        }
        .back-btn:hover {
            transform: translateY(-4px) scale(1.02);
            box-shadow: 0 12px 25px rgba(254, 201, 13, 0.4);
            background: linear-gradient(135deg, #ffd700, var(--accent, #fec90d));
        }
        .back-btn:hover i {
            transform: translateX(-5px);
        }
        .back-btn:active {
            transform: translateY(0) scale(0.98);
        }
        .back-btn::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 300%;
            height: 300%;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            transform: translate(-50%, -50%) scale(0);
            transition: transform 0.6s ease;
            pointer-events: none;
        }
        .back-btn:active::after {
            transform: translate(-50%, -50%) scale(1);
            opacity: 0;
            transition: 0s;
        }

        /* Math Game Styles */
        #game-container {
            margin-top: 40px;
            padding: 24px;
            background: var(--glass-bg, rgba(255, 255, 255, 0.05));
            border-radius: calc(var(--radius) * 1.5);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-top: 2px solid var(--accent, #fec90d);
            max-width: 400px;
            width: 90%;
            box-shadow: 0 12px 40px 0 rgba(0, 0, 0, 0.45);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            position: relative;
            overflow: hidden;
        }
        #game-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.05), transparent);
            transition: 0.5s;
        }
        #game-container:hover::before {
            left: 100%;
            transition: 0.8s;
        }
        .game-title {
            font-size: 1.2rem;
            color: var(--accent, #fec90d);
            margin-bottom: 15px;
            font-weight: bold;
        }
        .game-play-area {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            margin: 15px 0;
            flex-wrap: wrap;
        }
        #equation {
            font-size: 2.2rem;
            margin: 0;
            color: var(--text-primary, #fff);
            letter-spacing: 2px;
            font-family: var(--font-family, serif);
            text-shadow: 0 0 10px rgba(254, 201, 13, 0.3);
        }
        #answer-input {
            width: 80px;
            padding: 12px;
            font-size: 1.3rem;
            border-radius: var(--radius);
            border: 1px solid rgba(255, 255, 255, 0.2);
            background: rgba(255, 255, 255, 0.05);
            color: #fff;
            text-align: center;
            margin: 0;
            outline: none;
            transition: all 0.3s ease;
        }
        #answer-input:focus {
            background: rgba(255, 255, 255, 0.15);
            border-color: var(--accent, #fec90d);
            box-shadow: 0 0 15px rgba(254, 201, 13, 0.2);
        }
        #submit-ans {
            background-color: var(--accent, #fec90d);
            color: #00234a;
            border: none;
            padding: 12px 24px;
            border-radius: var(--radius);
            cursor: pointer;
            font-weight: bold;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(254, 201, 13, 0.2);
        }
        #submit-ans:hover {
            background-color: #e6b60c;
            transform: translateY(-1px);
        }
        #submit-ans:active {
            transform: scale(0.95);
        }
        #feedback {
            margin-top: 15px;
            min-height: 24px;
            font-weight: bold;
            font-size: 1.1rem;
        }
        .streak {
            margin-top: 10px;
            font-size: 0.9rem;
            color: var(--text-secondary, #ccc);
            display: flex;
            justify-content: space-around;
        }
        .stat-box {
            background: rgba(0, 0, 0, 0.2);
            padding: 5px 12px;
            border-radius: var(--radius);
        }
        #reset-stats {
            background: none;
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: var(--text-secondary, #ccc);
            padding: 4px 8px;
            border-radius: calc(var(--radius) / 2);
            cursor: pointer;
            font-size: 0.7rem;
            transition: all 0.2s;
            margin-top: 10px;
            align-self: center;
        }
        #reset-stats:hover {
            color: var(--accent, #fec90d);
            border-color: var(--accent, #fec90d);
            background: rgba(254, 201, 13, 0.1);
        }
    </style>
</head>
<body>
    <main>
        <div class="error-content">
            <img src="/assets/images/knhs.webp" alt="KNHS Logo" class="logo" style="max-width: 150px; margin-bottom: 20px;">
            <h1 class="error-code">404</h1>
            <h2 class="error-title">Page Not Found</h2>
            <p class="error-desc">The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
            
            <div id="game-container">
                <div class="game-title">Lost? Solve this to find your way!</div>
                <div id="timer-bar" style="height: 4px; background: var(--accent); width: 0%; margin-bottom: 10px; transition: width 0.1s linear; border-radius: calc(var(--radius) / 4);"></div>
                <div class="game-play-area">
                    <span id="equation">...</span>
                    <input type="text" id="answer-input" placeholder="?">
                    <button id="submit-ans">Check</button>
                </div>
                <div id="feedback"></div>
                <div class="streak">
                    <span class="stat-box">Streak: <span id="streak-count">0</span></span>
                    <span class="stat-box">Best: <span id="best-time">--</span>s</span>
                </div>
                <button id="reset-stats"><i class="fa fa-refresh"></i> Reset Stats</button>
            </div>

            <div style="margin-top: 40px;">
                <a href="/" class="back-btn">
                    <i class="fa fa-arrow-left"></i>
                    Back to Home
                </a>
            </div>
        </div>
    </main>
    <script is:inline>
        (function() {
            const equationEl = document.getElementById('equation');
            const inputEl = document.getElementById('answer-input');
            const submitBtn = document.getElementById('submit-ans');
            const feedbackEl = document.getElementById('feedback');
            const streakEl = document.getElementById('streak-count');
            const bestTimeEl = document.getElementById('best-time');
            const timerBar = document.getElementById('timer-bar');
            const resetBtn = document.getElementById('reset-stats');
            
            let currentAnswer;
            let streak = parseInt(localStorage.getItem('math_streak') || '0');
            let startTime;
            let bestTime = parseFloat(localStorage.getItem('math_best_time') || 'Infinity');
            let timerInterval;

            // Load initial values from localStorage
            streakEl.textContent = streak;
            if (isFinite(bestTime)) {
                bestTimeEl.textContent = bestTime.toFixed(1);
            }

            function updateTimer() {
                const elapsed = (Date.now() - startTime) / 1000;
                const timeLimit = 10; // 10 seconds to solve - reduced from 15
                const percent = Math.min((elapsed / timeLimit) * 100, 100);
                
                timerBar.style.width = percent + '%';
                
                if (percent >= 100) {
                    clearInterval(timerInterval);
                    streak = 0;
                    localStorage.setItem('math_streak', streak);
                    streakEl.textContent = streak;
                    feedbackEl.textContent = "Time's up! Next one... â°";
                    feedbackEl.style.color = '#ff9800';
                    // Quick retry after time expires
                    setTimeout(generateEquation, 1); 
                } else if (percent >= 70) {
                    timerBar.style.background = '#f44336'; // Turn red when almost out of time
                } else {
                    timerBar.style.background = 'var(--accent, #fec90d)';
                }
            }

            function generateEquation() {
                clearInterval(timerInterval);
                const ops = ['+', '-', '*'];
                let op = ops[Math.floor(Math.random() * (streak > 5 ? 3 : 2))]; 
                let a, b;

                if (streak > 15) op = '*'; 

                if (op === '*') {
                    const max = streak > 10 ? 15 : 12;
                    a = Math.floor(Math.random() * max) + 2;
                    b = Math.floor(Math.random() * max) + 2;
                } else {
                    const max = streak > 10 ? 100 : 50;
                    a = Math.floor(Math.random() * max) + 10;
                    b = Math.floor(Math.random() * max) + 10;
                }

                if (op === '-' && a < b) [a, b] = [b, a];

                equationEl.textContent = `${a} ${op === '*' ? 'Ã—' : op} ${b} =`;
                currentAnswer = op === '+' ? a + b : op === '-' ? a - b : a * b;
                inputEl.value = '';
                inputEl.focus();
                
                startTime = Date.now();
                timerBar.style.width = '0%';
                timerInterval = setInterval(updateTimer, 100);
            }

            function checkAnswer() {
                const userAns = parseInt(inputEl.value);
                if (userAns === currentAnswer) {
                    clearInterval(timerInterval);
                    const timeTaken = (Date.now() - startTime) / 1000;
                    streak++;
                    localStorage.setItem('math_streak', streak);
                    
                    let speedRank = '';
                    if (timeTaken < 1.5) speedRank = 'âš¡ Lightning Fast!';
                    else if (timeTaken < 3) speedRank = 'ðŸš€ Super Quick!';
                    else speedRank = 'âœ… Correct!';

                    let timeMsg = `${speedRank} (${timeTaken.toFixed(1)}s)`;
                    
                    if (timeTaken < bestTime) {
                        bestTime = timeTaken;
                        localStorage.setItem('math_best_time', bestTime);
                        bestTimeEl.textContent = bestTime.toFixed(1);
                        timeMsg = `ðŸ”¥ New Record: ${timeTaken.toFixed(1)}s!`;
                    }

                    feedbackEl.textContent = streak % 5 === 0 ? `Streak ${streak}! ${timeMsg}` : timeMsg;
                    feedbackEl.style.color = '#4CAF50';
                    streakEl.textContent = streak;
                    
                    if (streak % 10 === 0) {
                        feedbackEl.style.fontSize = '1.2rem';
                        // Revert font size scaling after animation
                        setTimeout(() => feedbackEl.style.fontSize = '1.1rem', 300);
                    }

                    // Delay before showing next question on success
                    setTimeout(generateEquation, 600); 
                } else {
                    if (inputEl.value !== '') {
                        clearInterval(timerInterval);
                        streak = 0;
                        localStorage.setItem('math_streak', streak);
                        feedbackEl.textContent = 'Concentrate! Next one... âŒ';
                        feedbackEl.style.color = '#f44336';
                        streakEl.textContent = streak;
                        // Delay before showing next question on failure
                        setTimeout(generateEquation, 600); 
                    }
                }
            }

            resetBtn.addEventListener('click', () => {
                localStorage.removeItem('math_streak');
                localStorage.removeItem('math_best_time');
                streak = 0;
                bestTime = Infinity;
                streakEl.textContent = '0';
                bestTimeEl.textContent = '--';
                feedbackEl.textContent = 'Stats Reset! ðŸ”„';
                feedbackEl.style.color = 'var(--accent)';
                generateEquation();
            });

            submitBtn.addEventListener('click', checkAnswer);
            inputEl.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') checkAnswer();
            });

            generateEquation();
        })();
    </script>
</body>
</html>
